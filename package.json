{
  "name": "live-state.ts",
  "version": "0.0.0",
  "description": "Create composable and reactive state that propagate updates down the stream without unnecessary computation",
  "keywords": [
    "state",
    "reactive",
    "composable",
    "lifecycle",
    "live-state",
    "realtime"
  ],
  "author": {
    "name": "Beeno Tung",
    "email": "aabbcc1241@yahoo.com.hk",
    "url": "https://beeno-tung.surge.sh"
  },
  "license": "BSD-2-Clause",
  "main": "dist/cjs.js",
  "types": "dist/state.d.ts",
  "module": "dist/esm.js",
  "sideEffects": false,
  "scripts": {
    "prepare": "run-p prepare:*",
    "prepare:husky": "husky install",
    "clean": "rimraf dist",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:json": "format-json-cli",
    "format:eslint": "eslint --ext .ts --fix .",
    "build": "run-s clean transpile",
    "transpile": "run-p esbuild tsc",
    "esbuild": "node scripts/esbuild.js",
    "tsc": "tsc -p tsconfig.esbuild.json",
    "test": "run-s format tsc mocha",
    "mocha": "ts-mocha \"{src,test}/**/*.spec.ts\"",
    "coverage": "nyc npm run mocha -- --reporter=progress",
    "report:update": "nyc --reporter=lcov npm run mocha -- --reporter=progress",
    "report:open": "open-cli coverage/lcov-report/index.html",
    "report": "run-s report:update report:open",
    "prepublishOnly": "run-s test build"
  },
  "files": [
    "src",
    "test",
    "example/package.json",
    "example/*.ts",
    "dist"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "8",
    "@types/node": "*",
    "@types/sinon": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.4",
    "esbuild": "^0.12.19",
    "esbuild-node-externals": "^1.4.0",
    "eslint": "^7.32.0",
    "format-json-cli": "^1.0.1",
    "husky": "^7.0.2",
    "minify": "^8.0.3",
    "mocha": "8",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenotung/live-state.ts.git"
  },
  "bugs": {
    "url": "https://github.com/beenotung/live-state.ts/issues"
  },
  "homepage": "https://github.com/beenotung/live-state.ts#readme"
}
